<div id="list-background">
    <div class="row justify-content-center" id="welcome">
        <div class="col-auto">
            <h2 class="text-center"id="welcome-message">Welcome, {{username}}!</h2>
        </div>
    </div>

    <div class="row m-3">
        <div class="col-md-4">
            <a class="btn btn-primary" href="/newJournal" role="button" id="new-journal-btn">New Journal Entry</a>
        </div>

        {{#if journals.length}}
        <div class="col-md-8 journal-list" id="entries">
            <h5>Current Journal Entries:</h5>

        {{#each journals as |journal|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h6><a href="/journal/{{journal.id}}">{{journal.expression.name}} by {{journal.distillery.name}}</a></h6>
            </div>
            <div class="col-md-2">
                <button class="btn btn-sm btn-danger" data-id="{{journal.id}}">DELETE</button>
            </div>
            {{/each}}
        </div>
        {{/if}}
    </div>
</div>
<script src="./js/homepage.js"></script>
